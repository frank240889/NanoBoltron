{

  "$id": "https://example.com/schemas/user-system-inlined.schema.json",
  "title": "UserSystem",
  "type": "object",
  "required": ["users", "metadata"],
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^v\\d+\\.\\d+\\.\\d+$"
        },
        "generatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["version"]
    },
    "users": {
      "type": "array",
      "minItems": 1,
      "items": {
        "allOf": [
          {
            "type": "object",
            "required": ["id", "email"],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[a-f0-9]{24}$"
              },
              "email": {
                "type": "string",
                "format": "email"
              },
              "role": {
                "type": "string",
                "enum": ["admin", "user", "guest"]
              }
            }
          },
          {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "role": { "const": "admin" },
                  "adminSettings": {
                    "type": "object",
                    "required": ["accessLevel"],
                    "properties": {
                      "accessLevel": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 10
                      }
                    }
                  }
                },
                "required": ["adminSettings"]
              },
              {
                "type": "object",
                "properties": {
                  "role": { "const": "user" },
                  "preferences": {
                    "type": "object",
                    "properties": {
                      "theme": {
                        "type": "string",
                        "enum": ["light", "dark"]
                      },
                      "language": {
                        "type": "string",
                        "minLength": 2
                      }
                    }
                  }
                }
              }
            ]
          }
        ]
      }
    }
  }
}
