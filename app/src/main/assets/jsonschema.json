{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/user-system.schema.json",
  "title": "UserSystem",
  "type": "object",
  "required": ["users", "metadata"],
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^v\\d+\\.\\d+\\.\\d+$"
        },
        "generatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["version"]
    },
    "users": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "#/$defs/baseUser"
          },
          {
            "oneOf": [
              { "$ref": "#/$defs/adminUser" },
              { "$ref": "#/$defs/regularUser" }
            ]
          }
        ]
      },
      "minItems": 1
    }
  },
  "$defs": {
    "baseUser": {
      "type": "object",
      "required": ["id", "email"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-f0-9]{24}$"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "role": {
          "type": "string",
          "enum": ["admin", "user", "guest"]
        }
      }
    },
    "adminUser": {
      "type": "object",
      "properties": {
        "role": { "const": "admin" },
        "adminSettings": {
          "type": "object",
          "required": ["accessLevel"],
          "properties": {
            "accessLevel": {
              "type": "integer",
              "minimum": 1,
              "maximum": 10
            }
          }
        }
      },
      "required": ["adminSettings"]
    },
    "regularUser": {
      "type": "object",
      "properties": {
        "role": { "const": "user" },
        "preferences": {
          "type": "object",
          "properties": {
            "theme": {
              "type": "string",
              "enum": ["light", "dark"]
            },
            "language": {
              "type": "string",
              "minLength": 2
            }
          }
        }
      }
    }
  }
}